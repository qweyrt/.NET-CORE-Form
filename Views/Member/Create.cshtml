@model Ctrlr.Models.Member

@{
    ViewData["Title"] = "Create";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                            <h3 class="text-center text-info">Input</h3>
                            <div class="form-group">
                                <label for="firstname" class="text-info">First Name:</label><br>
                                <input type="text" name="firstname" id="firstname" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="lastname" class="text-info">Last Name:</label><br>
                                <input type="text" name="lastname" id="lastname" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="gender" class="text-info">Gender:</label><br>
                                <select for="gender" id="gender" class="form-control">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="dateofbirth" class="text-info">Date of Birth:</label><br>
                                <input type="datetime" name="dateofbirth" id="dateofbirth" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="phonenumber" class="text-info">Phone Number:</label><br>
                                <input type="int" name="phonenumber" id="phonenumber" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="age" class="text-info">Age:</label><br>
                                <input type="int" name="age" id="age" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="placeofbirth" class="text-info">Place of Birth:</label><br>
                                <input type="text" name="placeofbirth" id="placeofbirth" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="grad" class="text-info">Is Graduated:</label><br>
                                <select for="grad" id="grad" class="form-control">
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>